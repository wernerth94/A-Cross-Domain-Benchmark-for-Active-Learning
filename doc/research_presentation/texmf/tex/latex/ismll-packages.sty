%% HANDLING BEAMER 
%BEGIN_FOLD
\@ifclassloaded{beamer}{%
  \RequirePackage{appendixnumberbeamer}
  \RequirePackage{outlines}
  \RequirePackage{enumitem}  %customize enumerate
  % restore item labels in beamer
  \setlist[itemize]{%
    label=\usebeamerfont*{itemize item}%
    \usebeamercolor[fg]{itemize item}
    \usebeamertemplate{itemize item}}
  % fixes Tex capacity exceeded error
  % https://tex.stackexchange.com/q/24371/
  \setlist[enumerate]{label=\arabic*.}

  % Patches Enumitem with beamer
  % https://tex.stackexchange.com/a/31524/119955
  \makeatletter
  \patchcmd{\@listI}{\itemsep3\p@}{\itemsep2em}{}{}
  \makeatother


  % Soul pacakge fix for beamer
  % https://tex.stackexchange.com/q/41683/
  \RequirePackage{soul}
  \makeatletter
  \let\HL\hl
  \renewcommand\hl{%
    \let\set@color\beamerorig@set@color
    \let\reset@color\beamerorig@reset@color
    \HL}
  \makeatother
}{% load beamer incompatible pacakges
  \RequirePackage{outlines}
  \RequirePackage{enumitem} %customize enumerate
  \RequirePackage{amsmath,amsfonts,amssymb,amsthm}
}%
%END_FOLD


